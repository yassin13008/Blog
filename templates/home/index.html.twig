{% extends 'base.html.twig' %}

{% block body %}

{{ parent() }}

    {% for post in posts %}
        <div class="card-body d-flex flex-column justify-content-center align-items-center container">
          <h2 class="card-title">{{ post.title }}</h2>
          <span class="badge bg-info">{{ post.category.name }}</span>
          <p>Créé par {{ post.user.fullname }}  le {{ post.createdAt|date("d/m/Y") }}</p>
          {% if post.image %}
          <img src="{{ asset_post_image(post.image) }}" alt="{{ post.title }}">
          {% endif %}
          <p>{{ post.content|slice(0,150) }}</p>
          <a href="{{ path('post.index', {'slug':post.slug}) }}">Lire la suite</a>
        </div>
    {% endfor %}

{% endblock %}


